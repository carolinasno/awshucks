extends layout

block content
  h1
    a(href='/', class='awshucks-header') AW SHUCKS
  .container
    
    if (!user)
      .row
        .six.columns
          a(href='/login', class='button') LOGIN
        .six.columns
          a(href='/register', class='button') REGISTER
    if (user)
      .row
        .twelve.columns
          h4(class='welcome-header') WELCOME #{user.username}
      .row
        .twelve.columns
          a(href='/logout', class='button') LOGOUT
